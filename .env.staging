# MIPTech AI Platform Configuration (Staging)
# ===========================================

# API Configuration
REACT_APP_MIPTECH_API_URL=https://staging-api.miptechnologies.tech
REACT_APP_MIPTECH_WS_URL=wss://staging-api.miptechnologies.tech
REACT_APP_MIPTECH_WS_PATH=/api/v1/ws/chat
REACT_APP_MIPTECH_TENANT_ID=miptech-company
# Note: Use JWT via SSO/cookies in staging, not API key
# REACT_APP_MIPTECH_API_KEY=staging-jwt-token

# Environment
REACT_APP_ENVIRONMENT=staging
REACT_APP_DEBUG=true

# Feature Flags
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_ANALYTICS=true

# Performance Configuration
REACT_APP_PERFORMANCE_SAMPLE_RATE=0.5
REACT_APP_PERFORMANCE_REPORTING_INTERVAL=10000

# Chat Configuration
REACT_APP_CHAT_MAX_MESSAGE_LENGTH=4000
REACT_APP_CHAT_SESSION_TIMEOUT=86400000
REACT_APP_CHAT_MAX_RETRIES=3
REACT_APP_CHAT_RETRY_DELAY=1000

# Security Configuration
REACT_APP_ENABLE_ENCRYPTION=true
REACT_APP_RATE_LIMIT_REQUESTS=20
REACT_APP_RATE_LIMIT_WINDOW=60000

# Staging Tools
REACT_APP_SHOW_PERFORMANCE_INDICATOR=true
REACT_APP_SHOW_DEBUG_INFO=true
REACT_APP_MOCK_API=false

# Analytics & Monitoring (Test environment IDs)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA_STAGING_ID
# REACT_APP_SENTRY_DSN=SENTRY_STAGING_DSN
# REACT_APP_HOTJAR_ID=HOTJAR_STAGING_ID

# CDN Configuration
# REACT_APP_CDN_URL=https://staging-cdn.miptechnologies.tech
# REACT_APP_STATIC_URL=https://staging-static.miptechnologies.tech

# Build Configuration
GENERATE_SOURCEMAP=true
SKIP_PREFLIGHT_CHECK=true