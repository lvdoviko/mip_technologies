# =============================================================================
# MIPTech AI Platform Client Configuration
# =============================================================================

# Platform Connection
REACT_APP_MIPTECH_API_URL=http://localhost:8001
REACT_APP_MIPTECH_WS_URL=ws://localhost:8001
REACT_APP_MIPTECH_API_VERSION=v1

# Tenant Configuration
REACT_APP_MIPTECH_TENANT_ID=miptech-company

# Authentication (if using API key authentication)
REACT_APP_MIPTECH_API_KEY=miptech_[generated-key]

# JWT Authentication Configuration (REQUIRED for production)
REACT_APP_JWT_ACCESS_TOKEN_KEY=miptech_access_token
REACT_APP_JWT_REFRESH_TOKEN_KEY=miptech_refresh_token

# Development Mode (allows unauthenticated requests for testing)
REACT_APP_DEBUG_MODE=true

# WebSocket Configuration
REACT_APP_WS_RECONNECT_ATTEMPTS=3
REACT_APP_WS_RECONNECT_DELAY=1000
REACT_APP_WS_PING_INTERVAL=30000

# Development Settings
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=debug

# Production Settings (override for production)
# REACT_APP_MIPTECH_API_URL=https://api.miptechnologies.tech
# REACT_APP_MIPTECH_WS_URL=wss://api.miptechnologies.tech
# REACT_APP_DEBUG_MODE=false
# REACT_APP_LOG_LEVEL=error

# Legacy Environment Variables (for backward compatibility)
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# Feature Flags
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_ANALYTICS=false

# Performance Configuration
REACT_APP_PERFORMANCE_SAMPLE_RATE=0.1
REACT_APP_PERFORMANCE_REPORTING_INTERVAL=30000

# Chat Configuration
REACT_APP_CHAT_MAX_MESSAGE_LENGTH=4000
REACT_APP_CHAT_SESSION_TIMEOUT=86400000
REACT_APP_CHAT_MAX_RETRIES=3
REACT_APP_CHAT_RETRY_DELAY=1000

# Security Configuration
REACT_APP_ENABLE_ENCRYPTION=true
REACT_APP_RATE_LIMIT_REQUESTS=10
REACT_APP_RATE_LIMIT_WINDOW=60000

# Development Tools
REACT_APP_SHOW_PERFORMANCE_INDICATOR=true
REACT_APP_SHOW_DEBUG_INFO=true
REACT_APP_MOCK_API=false
REACT_APP_DEBUG_API=true

# React Strict Mode Configuration
REACT_APP_STRICT_MODE_DELAYS=true
REACT_APP_WS_STRICT_MODE_DELAY=500

# Platform-Aware Debug Configuration
REACT_APP_DISABLE_AUTO_TESTS=true
REACT_APP_ENABLE_AUTO_PLATFORM_TEST=false
REACT_APP_PLATFORM_TEST_COOLDOWN_MS=5000
REACT_APP_PLATFORM_INIT_TIMEOUT_COLD=10000
REACT_APP_PLATFORM_INIT_TIMEOUT_WARM=5000

# Platform Integration
REACT_APP_ENABLE_PLATFORM_METRICS=true
REACT_APP_USE_PLATFORM_HEALTH=true

# Lazy Connection Strategy
REACT_APP_CHAT_CONNECTION_STRATEGY=on_demand
REACT_APP_CHAT_CONNECT_ON_TYPE=true
REACT_APP_CHAT_CONNECT_DELAY=3000
REACT_APP_CHAT_BUFFER_MESSAGES=true
REACT_APP_CHAT_SHOW_PLATFORM_PROGRESS=true

# Enterprise Debugging Features
REACT_APP_DEBUG_WEBSOCKET=true
REACT_APP_ENABLE_ENDPOINT_DISCOVERY=false
# Development optimization: Skip discovery and use direct endpoint
REACT_APP_ENABLE_MULTI_HEADER_AUTH=true
REACT_APP_ENABLE_CONNECTION_RETRY=true
REACT_APP_ENABLE_PERFORMANCE_TRACKING=true

# API Configuration
REACT_APP_API_VERSION=/api/v1
REACT_APP_API_TIMEOUT=30000
REACT_APP_WS_PING_INTERVAL=30000
REACT_APP_WS_RECONNECT_ATTEMPTS=5

# Optional: Analytics & Monitoring
# REACT_APP_GOOGLE_ANALYTICS_ID=
# REACT_APP_SENTRY_DSN=
# REACT_APP_HOTJAR_ID=

# Optional: CDN Configuration
# REACT_APP_CDN_URL=
# REACT_APP_STATIC_URL=

# Build Configuration
GENERATE_SOURCEMAP=true
SKIP_PREFLIGHT_CHECK=true